<h4 class="first">{{ 'export_step.database_product'|trans }}</h4>
<table class="fas-records-list">
    <thead>
        <tr>
            <th>{{ 'inventory.itemcode'|trans }}</th>
            <th>{{ 'inventory.itemname'|trans }}</th>
            <th>{{ 'inventory.othername'|trans }}</th>
            <th>{{ 'inventory.use_othername'|trans }}</th>
            <th>{{'inventory.default_discount'|trans }}</th>
        </tr>
    </thead>
    <tbody>
    {% for p in parts %}
        <tr>
            <td>{{ p.itemcode }}</td>
            <td>{{ p.itemname }}</td>
            <td>{{ p.othername }}</td>
            <td style="text-align: center">
                {% if (p.useOthername) %}
                    {% image '@MorusFasBundle/Resources/public/images/icon-tick.png' %}
                       <img src="{{ asset_url }}" alt="OK" style="width: 30px"/>
                   {% endimage %}
               {% endif %}
            </td>
            <td>${{ p.defaultDiscount|number_format(2, '.', ',') }}</td>
        </tr>
    {% endfor %}
    </tbody>
 </table>