{% block fas_person_widget %}
    {% spaceless %}
        {# {{ form.class.vars.value }} #}
        {% if app.request.locale == 'zh_HK' or app.request.locale == 'zh_CN' %}
            <div class="field inline">
                <label>{{ 'contact.last_name'|trans }}</label>
                {{ form_widget(form.lastName) }} 
            </div>
            <div class="field inline">
                <label>{{ 'contact.first_name'|trans }}</label>
                {{ form_widget(form.firstName) }}
            </div>
        {% else %}
            <div class="field inline">
                <label>{{ 'contact.first_name'|trans }}</label> 
                {{ form_widget(form.firstName) }} 
            </div>
            <div class="field inline">
                <label>{{ 'contact.last_name'|trans }}</label>
                {{ form_widget(form.lastName) }}
            </div>
        {% endif %}
    {% endspaceless %}
{% endblock fas_person_widget %}

{% block fas_contact_widget %}
    {% spaceless %}
        {% if form.contactClassControlCode.vars.value == 'EMAIL'%}
            <label>{{ 'contact.email'|trans }}</label>
        {% elseif form.contactClassControlCode.vars.value == 'TELEPHONE' %}
            <label>{{ 'contact.telephone'|trans }}</label>
        {% elseif form.contactClassControlCode.vars.value == 'FAX' %}
            <label>{{ 'contact.fax'|trans }}</label>
        {% elseif form.contactClassControlCode.vars.value == 'MOBILE' %}
            <label>{{ 'contact.mobile'|trans }}</label>
        {% elseif form.contactClassControlCode.vars.value == 'DIRECT' %}
            <label>{{ 'contact.direct'|trans }}</label>
        {% elseif form.contactClassControlCode.vars.value == 'WEBSITE' %}
            <label>{{ 'contact.website'|trans }}</label>
        {% elseif form.contactClassControlCode.vars.value == 'SOCIAL' %}
            <label>{{ 'contact.social'|trans }}</label>
        {% elseif form.contactClassControlCode.vars.value == 'OTHER' %}
            <label>{{ 'contact.other'|trans }}</label>
        {% endif %}
        {{ form_widget( form.contactClassControlCode ) }} {{ form.description.vars.label|trans }} {{ form_widget(form.description) }}
    {% endspaceless %}
{% endblock fas_contact_widget %}

{% block fas_location_widget %}
    {% spaceless %}
        <div class="col-1-3">
            <fieldset>
                <h6>
                {% if form.locationClassControlCode.vars.value == 'POSTAL'%}
                    {{ 'contact.postal_address'|trans }}
                {% elseif form.locationClassControlCode.vars.value == 'PHYSICAL' %}
                    {{ 'contact.physical_address'|trans }}
                {% else %}
                    {{ 'contact.address'|trans }}
                {% endif %}
                </h6>
                {{ form_widget(form.locationClassControlCode) }}
                <div class="field">
                    <label>{{ 'contact.attention'|trans }}</label>
                    {{ form_widget(form.attention) }}{{ form_errors(form.attention) }}
                </div>
                <div class="field">
                    <label>{{ 'contact.address_po_box'|trans }}</label>
                    {{ form_widget(form.address) }}{{ form_errors(form.address) }}
                </div>
                <div class="field">
                    <label>{{ 'contact.city'|trans }}</label>
                    {{ form_widget(form.city) }}{{ form_errors(form.city) }}
                </div>
                <div class="field">
                    <label>{{ 'contact.state'|trans }}</label>
                    {{ form_widget(form.state) }}{{ form_errors(form.state) }}
                </div>
                <div class="field">
                    <label>{{ 'contact.zip_code'|trans }}</label>
                    {{ form_widget(form.zipCode) }}{{ form_errors(form.zipCode) }}
                </div>
                <div class="field">
                    <label>{{ 'contact.country'|trans }}</label>
                    {{ form_widget(form.country) }}{{ form_errors(form.country) }}
                </div>
            </fieldset>
        </div>
        
        
        {{form_rest(form)}}
    {% endspaceless %}
{% endblock fas_location_widget %}

